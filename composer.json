{
    "name": "sylius/shop-api-plugin",
    "type": "sylius-plugin",
    "description": "Shop API for Sylius E-Commerce.",
    "license": "MIT",
    "require": {
        "php": "^7.1",

        "sylius/sylius": "^1.1",
        "league/tactician-bundle": "^1.1",
        "league/tactician-doctrine": "^1.1"
    },
    "require-dev": {
        "lakion/api-test-case": "^3.1.0",
        "phpspec/phpspec": "^4.0",
        "lexik/jwt-authentication-bundle": "^2.4",
        "matthiasnoback/symfony-config-test": "^3.0",
        "matthiasnoback/symfony-dependency-injection-test": "^2.0",
        "phpunit/phpunit": "^6.5",
        "doctrine/common": "<2.8",
        "sylius-labs/coding-standard": "^2.0"
    },
    "conflict": {
        "lakion/api-test-case": "3.1.1"
    },
    "autoload": {
        "psr-4": {
            "Sylius\\ShopApiPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Sylius\\ShopApiPlugin\\": "tests/"
        },
        "classmap": ["tests/Application/app/AppKernel.php"]
    },
    "suggest": {
        "nelmio/cors-bundle": "allows you to send Cross-Origin Ajax API Request"
    }
}
