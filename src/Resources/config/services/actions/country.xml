<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius.shop_api_plugin.controller.country.show_countries_action"
                 class="Sylius\ShopApiPlugin\Controller\Country\ShowCountriesAction"
        >
            <argument type="service" id="sylius.repository.country" />
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="sylius.shop_api_plugin.factory.country_view_factory" />
            <argument type="service" id="sylius.shop_api_plugin.http.request_based_locale_provider" />
        </service>

        <service id="sylius.shop_api_plugin.controller.country.show_country_provinces_action"
                 class="Sylius\ShopApiPlugin\Controller\Country\ShowCountryProvincesAction"
        >
            <argument type="service" id="sylius.repository.country" />
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="sylius.shop_api_plugin.factory.country_view_factory" />
            <argument type="service" id="sylius.shop_api_plugin.factory.province_view_factory" />
            <argument type="service" id="sylius.shop_api_plugin.http.request_based_locale_provider" />
        </service>
    </services>
</container>
