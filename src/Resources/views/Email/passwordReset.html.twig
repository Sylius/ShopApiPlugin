{% block subject %}
    Password reset
{% endblock %}

{% block body %}
    {% set url = url('sylius_shop_password_reset', {'channelCode': channelCode, 'token': user.passwordResetToken}) %}
    {% autoescape %}
        <h3>Hello {{ user.username }}</h3>

        To reset your password - please visit {{ url|raw }}
        <br/><br/>
        Regards, the Team.
    {% endautoescape %}
{% endblock %}
